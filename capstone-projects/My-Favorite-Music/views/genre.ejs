<%- include('partials/header.ejs') %>
<div class="px-4 py-2 my-1 text-center text-white">
  <h1 class="display-3 fw-bold"><%= genre.name %> Artists</h1>
  <div class="col-lg-12 mx-auto">
    <div class="container-fluid">
      <div class="row">
        <% if(locals.favData && locals.favData.length > 0){  %>
        <h5 class="fst-italic text-start">Your favorite <%= genre.name.toLowerCase() %> artists</h5>
        <div class="row row-cols-2 row-cols-sm-4 row-cols-md-6 g-3 mb-5">
          <% favData.forEach(data => { %>
          <%- include('partials/blocks/genre-card.ejs', {data: data, genre: genre}) %>
          <% }) %>
        </div>
        <h5 class="fst-italic text-start">Other <%= genre.name.toLowerCase() %> artists</h5>
        <% } %>
        <div class="row row-cols-2 row-cols-sm-4 row-cols-md-6 g-3">
          <% if(locals.data){ 
          data.forEach(data => { %>
          <%- include('partials/blocks/genre-card.ejs', {data: data, genre: genre}) %>
          <% }) 
           } %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>