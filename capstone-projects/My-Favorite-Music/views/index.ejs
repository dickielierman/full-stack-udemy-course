<%- include('partials/header.ejs') %>
<div class="px-4 py-2 text-center text-white">
  <h1 class="display-5 fw-bold">My Music Memories</h1>
  <div class="col-lg-12 mx-auto">
    <p class="lead mb-4">Quickly access a database of my favorite songs, artists, genres, and everything music related.
    </p>
    <div class="row row-cols-2 row-cols-sm-4 row-cols-md-6 g-3">
      <% if(locals.genres){ 
        genres.forEach(g=>{ %>
      <div class="col">
        <a href="/genre/<%= g.deezer_id %>">
          <div class="card shadow-lg">
            <img src="<%= g.picture_big %>" alt="<%= g.name.toLowerCase() %>">
            <div class="centered"><%= g.name %></div>
          </div>
        </a>
      </div>
      <% }) 
     } %>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>