<body>
  <div class="d-flex flex-row justify-content-between">
    <a href="/"><img class="d-block" src="/images/logo.png" alt="" width="100" height="100"></a>
    <form class="w-25 align-self-center me-4 invisible" role="search">
      <div class="input-group input-group-lg d-flex">
        <input type="search" class="form-control flex-grow-1" placeholder="Artist, Album, or Song to search for..."
          aria-label="Search" name="query">
        <button class="btn btn-secondary w-10 colorful-btn" type="button" type="submit">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </form>
  </div>